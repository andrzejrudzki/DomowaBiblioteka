        @*   --- dodane w foto ---*@
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">

                    @*<input asp-for="Photo" class="form-control custom-file-input">*@
                    @* <input class="form-control" name="files" multiple="multiple" type="file" />*@ @* input z bloba*@
                    <input asp-for="Photo" class="form-control custom-file-input" name="files" multiple="multiple" type="file">

                    <label class="custom-file-label">Wybierz plik jpg png</label>

                </div>
            </div>
        </div>
        @*   --- koniec dodane w foto ---*@
    </div>
