            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Wybierz plik jpg png</label>
                </div>
            </div>
        </div>
    *@
    @* --- Blob zamiast orginalnego --- *@
    @* <div class="row">*@
    <div class="col-md-6">
        @* <form method="post" enctype="multipart/form-data" asp-controller="Blob" asp-action="Create">*@
        @* <div class="form-group">
            <label> Select File </label>
        *@
