@model RentViewModel

@{ ViewData["Title"] = "Wypożycz";
}
    <h1>Wypożycz</h1>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Rent"
      method="post" class="mt-3">
    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Borrower" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Borrower" class="form-control" placeholder="Informacja kto wypożyczył">
            <span asp-validation-for="Borrower" class="text-danger"></span>
        </div>
    </div>
   
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Wypożycz</button>
        </div>
    </div>




</form>
